{
  "name": "Control de Asistencia",
  "version": "1.0.0.68",
  "manifest_version": 2,
  "default_locale":"en",
  "minimum_chrome_version": "45",
  "description": "Control de Asistencia para Empleados Hotel Eurobuilding",
  "author": "Dyam Marcano <dyam.marcano@gmail.com>",
  "offline_enabled": true,
  "sandbox": {
    "pages": [
      "index.html",
      "scripts/particles.js"
    ]
  },
  "permissions": [
    "https://api-5622245.rhcloud.com/*",
    "alarms",
    "identity",
    "idle",
    "storage",
    "unlimitedStorage",
    "background",
    "notifications"
  ],
  "icons": {
    "16":  "images/icon16.png",
    "48":  "images/icon48.png",
    "128": "images/icon128.png"
  },
  "app": {
    "background": {
      "persistent": false,
      "page": "views/background.html"
    }
  }
}